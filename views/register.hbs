<div class="form_container">
    <div class="form_container_item">
        <h3>Register to Storybook</h3>
        {{>_msg}}
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="name"><i class="fas fa-keyboard"></i> Name: </label>
                <input type="text" name="name" placeholder="Enter name" value="{{name}}">
            </div>
            <div class="form-group">
                <label for="email"><i class="fas fa-user"></i> Email: </label>
                <input type="email" name="email" placeholder="Enter email" value="{{email}}">
            </div>
            <div class="form-group">
                <label for="password"><i class="fas fa-lock"></i>Password : </label>
                <input type="password" name="password" placeholder="Choose Password" value="{{password}}">
            </div>
            <div class="form-group">
                <label for="password2"><i class="fas fa-lock"></i> confirm Password: </label>
                <input type="password" name="password2" placeholder="Confirm password" value="{{password2}}">
            </div>
            <input type="submit" value="Register" class="btn">
        </form>
        <span>Already have an account? <a href="/login">Login</a></span>
    </div>
</div>